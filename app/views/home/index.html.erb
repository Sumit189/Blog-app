<div class="card">
  <div class="card-header">
  </div>
<!--  Latest Post-->
  <% if @latest_post == nil %>
    <center>
      <div class="nopost">
      <h4>No posts....</h4>
      </div>
    </center>
  <% end %>
<% if @latest_post != nil  %>
  <div class="row row-big-card" title="Latest">
    <div class="cont">
      <div class="card-link">
        <div class="card-img">
          <div style="background-image:url(<%= rails_blob_url(@latest_post.image) %>);"></div>
        </div>
        <div class="card-inner">
          <h4><%= @latest_post.title.truncate_words(10) %></h4>
          <div class="inner-text">
           <p><%= @latest_post.content.truncate_words(20) %></p>
          </div>
          <%= link_to "Read More", "/posts/#{@latest_post.id}", class: "cta-card btn btn-danger" %>
          <%#= link_to "Read more", "/posts/#{@latest_post.id}" , class:"btn btn-danger text-white cta-card" %>
        </div>
      </div>

    </div>
  </div>
<!--  Posts-->
      <h2 style="margin-left: 17%">All Posts</h2>
  <div class="card-body">
    <% if params[:page].to_s == 1.to_s %>
    <% @other_posts[1..-1].each do |p| %>
      <div class="blog-card">
      <div class="meta">
        <div class="photo" style="background-image: url('<%= rails_blob_url(p.image) %>')"></div>
      </div>
      <div class="description">
        <h1><%= p.title.truncate_words(10) %></h1>
        <p><%= p.content.truncate_words(20) %></p>
        <p class="read-more">
          <%= link_to "Read more", "/posts/#{p.id}", class:"btn btn-danger text-white" %>
        </p>
      </div>
    </div>
    <% end %>
    <% else %>
      <% @other_posts.each do |p| %>
        <div class="blog-card">
          <div class="meta">
            <div class="photo" style="background-image: url('<%= rails_blob_url(p.image) %>')"></div>
          </div>
          <div class="description">
            <h1><%= p.title.truncate_words(10) %></h1>
            <p><%= p.content.truncate_words(20) %></p>
            <p class="read-more">
              <%= link_to "Read more", "/posts/#{p.id}", class:"btn btn-danger text-white" %>
            </p>
          </div>
        </div>
      <% end %>
    <% end %>


  </div>
  <% end %>

  <div class="class-footer">
    <div class="d-flex">
      <div class="mx-auto">
      <%= will_paginate @other_posts, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
      </div>
    </div>
  </div>

  </div>

<%= render "shared/floating_edit" %>

<%= render "shared/footer" %>

<script>
    var menu = document.getElementById("home");
    menu.classList.add("active");
</script>